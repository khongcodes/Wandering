<% title "Your journey ends..."%>
<h1>Your journey ends...</h1>

<%= render partial:'layouts/error_display', locals:{obj:@journey} %>

<% if @resource %>
  <p>
    Created <%= wrapup_cast_created(@resource) %>
  </p>
<% end %>

<p>
Choose one item to bring with you into the Ether - the rest must remain here.

<%= form_tag({controller:'journeys', action:'wrapup_cast'}) do %>
  <div class='form'>
  
    <% @items.each do |i| %>
      <div class='wrapup_cast_item_select'>
        <%= radio_button_tag :item, i.id %>

        <div class='wrapup_cast_item'>
          <label for="item_<%= i.id %>">
            <%= i.name %><br>
            <small><%= i.descript %></small>
          </label>
        </div>

      </div><br>

    <% end %><br style="clear: both">
  </div>

  <%= submit_tag "End Journey" %>
<% end %>
</p>

