<% title "Wandering"%>
<h1>Wandering</h1>

<p>Welcome to Wandering, a short rogue-like-like walking simulator.</p>

<div class='vertical-margin-div'>
    <% if session[:user_id].present? %>
        <h3>Welcome back, <%= current_user.username %></h3>
        <p><%= link_to current_user.username, current_user %></p>
        <%= form_tag ({controller:'sessions',action:'destroy'}) do %>
            <%= submit_tag "Log Out" %>
        <% end %>
    <% else %>
        <p><%= link_to "Create User", new_user_path %></p>
    <% end %>
</div>

<%= link_to "Begin Journey", new_journey_path %>
<p><%= link_to "Book of Journeys", journeys_path %></p>